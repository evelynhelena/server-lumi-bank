generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  name        String
  email       String        @unique
  accounts    Account[] // mudou de Transaction[] para accounts
  Transaction Transaction[]
}

model Account {
  id          String  @id @default(cuid()) // ID customiz√°vel, como "bb1d"
  accountType String
  balance     Decimal @db.Decimal(12, 2) // formato adequado para valores financeiros
  userId      Int
  user        User    @relation(fields: [userId], references: [id])
}

model Transaction {
  id               String   @id @default(cuid())
  date             DateTime @default(now())
  userId           Int
  transactionType  String
  valueTransaction Decimal  @db.Decimal(12, 2)

  user User @relation(fields: [userId], references: [id])
}
